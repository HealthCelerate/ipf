<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:camel-osgi="http://camel.apache.org/schema/osgi"
           xmlns:camel-spring="http://camel.apache.org/schema/spring"
           xmlns:context="http://www.springframework.org/schema/context"
           xsi:schemaLocation=
                   "http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
                    http://camel.apache.org/schema/osgi http://camel.apache.org/schema/osgi/camel-osgi.xsd
                    http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <context:annotation-config />
    
    <camel-osgi:camelContext id="camelContext">
        <camel-spring:routeBuilder ref="routeBuilder"/>
    </camel-osgi:camelContext>

    <bean id="routeBuilder" 
        class="org.openehealth.ipf.tutorials.osgi.route.web.SampleRouteBuilder">
    </bean>

    <bean id="initRenderer"
        class="org.openehealth.ipf.tutorials.osgi.route.web.render.InitRenderer">
    </bean>

    <bean id="ackRenderer"
        class="org.openehealth.ipf.tutorials.osgi.route.web.render.AckRenderer">
    </bean>

</blueprint>